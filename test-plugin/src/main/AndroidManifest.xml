<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Permission for HTTP requests -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permission for camera access -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Camera features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    
    <application>
        <!-- 
            Plugin wird als APK gebaut, aber nicht als eigenständige App gestartet.
            Die Main Activity ist nur für Metadaten-Zwecke.
            
            Note: android:icon and android:label are not allowed in library module manifests.
            These should be defined in the app module's manifest if needed.
        -->
    </application>
    
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ble1st.connectias.test2plugin">

    <!-- Camera permission for image capture via Hardware Bridge -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera hardware feature (optional, so plugin works on devices without camera) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application>
        <!--
            Three-Process UI Architecture Plugin

            This plugin does NOT declare any Activities or Fragments!
            UI is rendered in a separate UI Process using state-based rendering.

            The plugin class (Test2Plugin) is loaded dynamically by the Connectias
            plugin system and communicates with the UI Process via IPC.
        -->
    </application>
</manifest>
